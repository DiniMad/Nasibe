<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="Nasibe.UserController.CatalogItemToAdd"
    mc:Ignorable="d" 
    d:DesignWidth="200" Height="40" FlowDirection="RightToLeft">
    <Grid>
        <telerik:RadButton x:Name="ButtonAdd" x:FieldModifier="public" Content="+" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" FontWeight="Bold" FontFamily="Arial" FontSize="70" Padding="0,-20,0,0" BorderThickness="0" Foreground="Green"/>

        <TextBox x:Name="TxtMain" x:FieldModifier="public" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="40" FontSize="20" FontWeight="Bold" FontFamily="Arial" FlowDirection="RightToLeft" VerticalContentAlignment="Center" Margin="40,0,0,0" MaxLength="20">
        </TextBox>
    </Grid>
</UserControl>
